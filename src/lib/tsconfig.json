{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2020", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../../lib/camembert",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "inlineSources": true,
    "stripInternal": false,
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ]
  }
}
